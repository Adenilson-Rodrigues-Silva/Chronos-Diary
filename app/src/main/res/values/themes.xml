<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ChronosDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/neon_green</item>
        <item name="android:windowBackground">@color/chronos_black</item>
        <item name="android:statusBarColor">@color/chronos_black</item>
        <item name="android:itemBackground">#1E1E1E</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="TextStyle.Chronos.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextStyle.Chronos.LogContent" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextStyle.Chronos.SystemLabel" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">#00FFCC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:tint">#00FFCC</item>

    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SquareNeonImage">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CyberDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">#00FFCC</item>
        <item name="colorAccent">#00FFCC</item>
    </style>


</resources>