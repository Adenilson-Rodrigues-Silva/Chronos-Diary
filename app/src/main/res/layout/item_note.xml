<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/cyber_card_border"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"> <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/view_indicator"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="#00FF00"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/view_indicator"
        android:layout_marginStart="12dp"
        android:text="[ TIMESTAMP: 10.02.26 ]"
        android:textColor="#00FF00"
        android:textSize="11sp"
        android:letterSpacing="0.1" />

    <TextView
        android:id="@+id/text_note_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_note_date"
        android:layout_toEndOf="@id/view_indicator"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="Iniciando sequÃªncia de log..."
        android:textColor="#A0A0A0"
        android:textSize="14sp"
        android:fontFamily="monospace" />

</RelativeLayout>
</androidx.cardview.widget.CardView>