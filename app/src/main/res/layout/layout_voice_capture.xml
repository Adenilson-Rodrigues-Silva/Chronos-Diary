<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/chronos_dark_gray"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:gravity="center_horizontal">

    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="@color/neon_green"
        android:layout_marginBottom="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_visualizer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="-25dp"
        app:lottie_rawRes="@raw/wave_test_3"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        app:lottie_renderMode="software"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieMic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_rawRes="@raw/mic_verde_test_2"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:background="@android:color/transparent" />

</LinearLayout>