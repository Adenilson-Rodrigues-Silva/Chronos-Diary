<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/chronos_dark_gray"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="@color/neon_green"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/status_text"
        style="@style/TextStyle.Chronos.SystemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> INITIALIZING_RECOGNITION..."
        android:textColor="@color/neon_green"
        android:layout_marginBottom="16dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_visualizer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:lottie_rawRes="@raw/wave_hacker"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/partial_text_view"
        style="@style/TextStyle.Chronos.LogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:gravity="center"
        android:text="..."
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"/>

    <ImageButton
        android:id="@+id/btn_finish_voice"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_mic"
        android:background="@drawable/bg_mic_neon"
        android:scaleType="centerInside"
        android:elevation="4dp"
        android:contentDescription="Ação de Voz"
        android:layout_marginBottom="10dp"/>

</LinearLayout>