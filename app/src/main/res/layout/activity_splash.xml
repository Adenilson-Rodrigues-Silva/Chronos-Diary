<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_chronos"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo_chronos"
            android:contentDescription="Chronos Logo" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/orbitron_bold"
            android:letterSpacing="0.2"
            android:text="CHRONOS DIARY"
            android:textColor="@color/neon_green"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURE YOUR MEMORIES"
            android:textColor="#008800"
            android:textSize="10sp"
            android:letterSpacing="0.1"
            android:fontFamily="@font/orbitron_black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_ars"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_cyber"
        android:fontFamily="@font/orbitron_bold"
        android:text="START YOUR JOURNEY"
        android:textColor="@color/neon_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_ars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:alpha="0.7"
        android:fontFamily="@font/orbitron_black"
        android:text="Developed by A.R.Silva"
        android:textColor="@color/neon_purple"
        android:textSize="12sp" />

</RelativeLayout>